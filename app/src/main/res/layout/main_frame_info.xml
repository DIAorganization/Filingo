<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/background_2_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/background_4"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/info_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:shapeAppearanceOverlay="@style/round_image_20"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/top_info_horizontal_bottom_guideline"
        app:layout_constraintEnd_toStartOf="@+id/main_frame_vertical_right_guideline"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/main_frame_vertical_left_guideline"
        app:layout_constraintTop_toTopOf="@+id/top_info_horizontal_top_guideline"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/background_3" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/topic_chooser"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_menu_horizontal_bottom_guideline"
        app:layout_constraintEnd_toStartOf="@+id/main_frame_vertical_right_guideline"
        app:layout_constraintStart_toStartOf="@+id/main_frame_vertical_left_guideline"
        app:layout_constraintTop_toTopOf="@+id/top_info_horizontal_bottom_guideline" />




    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/user_icn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/round_outline_background_info"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/top_info_horizontal_bottom_guideline"
        app:layout_constraintEnd_toStartOf="@+id/main_frame_vertical_right_guideline"
        app:layout_constraintHorizontal_bias="0.081"
        app:layout_constraintStart_toStartOf="@+id/main_frame_vertical_left_guideline"
        app:layout_constraintTop_toTopOf="@+id/top_info_horizontal_top_guideline"
        app:layout_constraintVertical_bias="0.134"
        app:srcCompat="@drawable/icn_user"
        app:shapeAppearanceOverlay="@style/round_image_45" />

    <TextView
        android:id="@+id/user_greetings"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="sans-serif"
        android:includeFontPadding="false"
        android:letterSpacing="0.1"
        android:text="Hi Mary , are you ready to know more ?"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/main_frame_vertical_right_guideline"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/user_greetings_left_guideline"
        app:layout_constraintTop_toTopOf="@+id/info_background" />

    <TextView
        android:id="@+id/progress_text"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="68dp"
        android:fontFamily="sans-serif"
        android:includeFontPadding="false"
        android:letterSpacing="0.1"
        android:text="Your Course Progress"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/main_frame_vertical_right_guideline"
        app:layout_constraintHorizontal_bias="0.744"
        app:layout_constraintStart_toStartOf="@+id/main_frame_vertical_left_guideline"
        app:layout_constraintTop_toBottomOf="@+id/user_greetings" />


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/bottom_menu_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/bottom_menu_horizontal_bottom_guideline"
        app:layout_constraintEnd_toStartOf="@+id/bottom_menu_vertical_right_guideline"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/bottom_menu_vertical_left_guideline"
        app:layout_constraintTop_toTopOf="@+id/bottom_menu_horizontal_top_guideline"
        app:layout_constraintVertical_bias="0.0"
        app:shapeAppearanceOverlay="@style/round_image_10"
        app:srcCompat="@drawable/background_3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/main_frame_vertical_left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/main_frame_vertical_right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom_menu_vertical_left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.03"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom_menu_vertical_right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.97"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/user_greetings_left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4"/>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_info_horizontal_bottom_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.38"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_info_horizontal_top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.03"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom_menu_horizontal_top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.89"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom_menu_horizontal_bottom_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.98"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:indeterminate="true"
        android:indeterminateTint="@color/white"
        android:layout_width="196dp"
        android:layout_height="32dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/info_background"
        app:layout_constraintEnd_toEndOf="@+id/progress_text"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="@+id/progress_text" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/main_frame_grammar_info_button"
        android:layout_width="81dp"
        android:layout_height="52dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginStart="20dp"
        android:background="@drawable/ic_button_again_background"
        android:fontFamily="sans-serif"
        android:text="Learn"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_menu_background"
        app:layout_constraintStart_toStartOf="@+id/main_frame_vertical_left_guideline"
        app:layout_constraintTop_toTopOf="@+id/bottom_menu_background" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/main_frame_random_test_button"
        android:layout_width="81dp"
        android:layout_height="52dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginEnd="20dp"
        android:background="@drawable/ic_button_learn_background"
        android:fontFamily="sans-serif"
        android:text="Random"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_menu_background"
        app:layout_constraintEnd_toStartOf="@+id/main_frame_vertical_right_guideline"
        app:layout_constraintTop_toTopOf="@+id/bottom_menu_background" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/main_frame_grammar_test_button"
        android:layout_width="81dp"
        android:layout_height="52dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="@drawable/ic_button_exit_background"
        android:fontFamily="sans-serif"
        android:text="Grammar"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_menu_background"
        app:layout_constraintEnd_toStartOf="@+id/main_frame_random_test_button"
        app:layout_constraintStart_toEndOf="@+id/main_frame_grammar_info_button"
        app:layout_constraintTop_toTopOf="@+id/bottom_menu_background" />

</androidx.constraintlayout.widget.ConstraintLayout>